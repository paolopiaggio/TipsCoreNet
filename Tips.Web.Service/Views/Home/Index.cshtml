<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.10/angular.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.10/angular-route.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/3.10.0/lodash.js"></script>
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/restangular/1.5.1/restangular.js"></script>
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link rel="stylesheet" href="http://getbootstrap.com/2.3.2/assets/css/bootstrap.css"/>
    <title>Maybe...</title>
</head>

<body ng-app="myApp">
    <div ng-view></div>
    <script type="text/ng-template" id="showTip.html">
        <div class="wrapper">
            <a href="#/show-me-another-tip" id="tip" rel="nofollow" style="display: table-cell;">{{tipToShow.text}}</a>
        </div>
    </script>
    <script type="text/ng-template" id="listTip.html">
        <input type="text" ng-model="search" class="search-query" placeholder="Search">
        <p>Add new tip</p>
        <a href="#/admin/add"><i class="icon-plus-sign"></i></a>
        <div ng-repeat="tip in tips | filter:search | orderBy:'id'">
            <p>{{tip.id}}|{{tip.text}}</p>
            <a href="#/admin/edit/{{tip.id}}"><i class="icon-pencil"></i></a>
            <a href="javascript:void(0)" ng-click="deleteTip(tip)"><i class="icon-trash"></i></a>
        </div>
    </script>
    <script type="text/ng-template" id="detailTip.html">
        <form name="myForm">
            <label>Text</label>
            <input type="text" name="text" ng-model="tip.text" required>
            <span ng-show="myForm.name.$error.required" class="help-inline">Required</span>
            <a href="#/admin" class="btn">Cancel</a>
            <button ng-click="save()" ng-disabled="editForm.$invalid" class="btn btn-primary">Save</button>
        </form>
    </script>
    <div class="github">
        <!-- Place this tag where you want the button to render. -->
        <a class="github-button" href="https://github.com/paolopiaggio/TipsCoreNet" data-icon="octicon-star" data-style="mega" data-count-href="/paolopiaggio/TipsCoreNet/stargazers" data-count-api="/repos/paolopiaggio/TipsCoreNet#stargazers_count" data-count-aria-label="# stargazers on GitHub" aria-label="Star paolopiaggio/TipsCoreNet on GitHub">Star</a>
    </div>
    <script src="~/js/app.js"></script>
</body>
</html>